<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="us.v4lk.transrock.RouteListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:transitionGroup="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/routelist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/routelist_noroutes_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/routelist_toolbar"
        android:text="@string/no_routes"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:layout_margin="20dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/routelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/routelist_toolbar"
        android:divider="@null"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/routelist_addroute_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="addRoute"
        android:src="@mipmap/ic_add_white_24dp"
        android:layout_margin="24dp"
        app:elevation="6dp"/>

</RelativeLayout>
