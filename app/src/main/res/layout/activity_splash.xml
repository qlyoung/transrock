<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/spec_activity_horizontal_margin"
    android:paddingRight="@dimen/spec_activity_horizontal_margin"
    android:paddingTop="@dimen/spec_activity_vertical_margin"
    android:paddingBottom="@dimen/spec_activity_vertical_margin"
    android:background="@color/color_primary"
    tools:context="us.v4lk.transrock.SplashActivity">

    <TextView android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="150dp"
        android:textSize="18pt"
        android:textStyle="bold|italic"/>

</RelativeLayout>
