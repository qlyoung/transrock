<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/routelist_noroutes_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:text="@string/no_routes"
        android:gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textIsSelectable="false"
        android:visibility="gone" />

    <ListView
        android:id="@+id/routelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/spec_activity_horizontal_margin"
        android:paddingEnd="@dimen/spec_activity_horizontal_margin"
        android:divider="@null" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/routelist_addroute_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="addRoute"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_margin="24dp"
        app:elevation="6dp" />

</RelativeLayout>
